<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" SizeToContent="Height"
		Width="250"
        x:Class="Client.MsgBox"
		CanResize="False"
        Title="Внимание">
	<StackPanel>
		<TextBlock Margin="10" TextWrapping="Wrap" Width="240" Name="MsgLbl" TextAlignment="Center"></TextBlock>
		<WrapPanel HorizontalAlignment="Center">
			<Button Name="OK" Click="Validate">Ок</Button>
			<Button Name="CANCEL" Click="Validate">Отмена</Button>
		</WrapPanel>
	</StackPanel>
</Window>
